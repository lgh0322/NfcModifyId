<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fffaf0f0"
    android:clickable="true"
    android:focusable="true"
    tools:context=".activity.MainActivity">


    <androidx.cardview.widget.CardView
        android:id="@+id/change"
        android:layout_width="308dp"
        android:layout_height="70dp"
        android:layout_marginTop="23dp"
        app:cardCornerRadius="35dp"
        app:cardElevation="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/ecgButton"
                android:layout_width="144dp"
                android:layout_height="50dp"
                android:background="@drawable/top_button_bg"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:text="十进制"
                android:textColor="@color/white"
                android:textSize="26sp" />

            <TextView
                android:id="@+id/prButton"
                android:layout_width="144dp"
                android:layout_height="50dp"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:text="十六进制"
                android:textColor="#4E596F"
                android:textSize="26sp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>




    <LinearLayout
        android:gravity="center"
        android:id="@+id/number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_marginStart="15dp"
            android:layout_weight="0.5"
            android:text="写入内容"
            android:textColor="@color/purple_200"
            android:textSize="26sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/x1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/ai_bg"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="3"
            android:padding="10dp"
            android:textColor="@color/white" />

        <EditText
            android:id="@+id/x2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/ai_bg"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="3"
            android:padding="10dp"
            android:textColor="@color/white" />

        <EditText
            android:id="@+id/x3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/ai_bg"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="3"
            android:padding="10dp"
            android:textColor="@color/white" />

        <EditText
            android:layout_marginEnd="30dp"
            android:id="@+id/x4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/ai_bg"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="3"
            android:padding="10dp"
            android:textColor="@color/white" />

    </LinearLayout>

    <TextView
        android:id="@+id/go"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_marginTop="500dp"
        android:background="@drawable/ai_bg"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:gravity="center"
        android:onClick="writeId"
        android:text="设置"
        android:textColor="@color/white"
        android:textSize="50sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/titleWrite"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="15dp"
        android:layout_marginTop="300dp"
        android:textColor="@color/purple_200"
        android:textSize="26sp"
        android:text="写入次数"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <EditText
        android:background="@drawable/ai_bg"
        android:gravity="center"
        android:id="@+id/writeCount"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/titleWrite"
        android:layout_marginTop="300dp"
        android:layout_marginStart="60dp"
        android:layout_width="130dp"
        android:textSize="26sp"
        android:layout_height="wrap_content"/>

    <androidx.constraintlayout.widget.Group
        android:id="@+id/group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:constraint_referenced_ids="number,go,titleWrite,writeCount,change" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/ble_table"
        android:layout_width="match_parent"
        android:layout_height="390dp"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>